<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.WeatherFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.SearchView
            android:id="@+id/weather_searchview"
            app:queryHint="장소,주소 검색"
            app:iconifiedByDefault="false"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="검색 결과가 없습니다"
            android:id="@+id/weather_tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/weather_searchview"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <ImageView
            android:layout_marginLeft="20dp"
            android:id="@+id/weather_iv_icon"
            android:adjustViewBounds="true"
            tools:src="@drawable/sun_small"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:layout_constraintTop_toBottomOf="@+id/weather_tv_result"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:gravity="center"
            android:id="@+id/weather_tv_address"
            tools:text="경기도 하남시"
            android:textSize="25dp"
            android:textColor="@color/green"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/weather_iv_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            tools:text="현재온도 : 27℃"
            android:textSize="20dp"
            android:textColor="@color/green"
            android:layout_marginTop="10dp"
            android:id="@+id/weather_tv_temp"
            app:layout_constraintTop_toBottomOf="@+id/weather_tv_address"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:visibility="invisible"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/weather_tv_temp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
</layout>