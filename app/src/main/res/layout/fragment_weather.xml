<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.WeatherFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.SearchView
            android:id="@+id/weather_searchview"
            app:queryHint="장소,주소 검색"
            app:iconifiedByDefault="false"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="검색 결과가 없습니다"
            android:id="@+id/weather_tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/weather_searchview"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <ImageView
            android:layout_marginLeft="20dp"
            android:id="@+id/weather_iv_icon"
            android:adjustViewBounds="true"
            tools:src="@drawable/sun_small"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:layout_constraintTop_toBottomOf="@+id/weather_tv_result"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:gravity="center"
            android:id="@+id/weather_tv_address"
            tools:text="경기도 하남시"
            android:textSize="25dp"
            android:textColor="@color/green"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/weather_iv_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            tools:text="현재온도 : 27℃"
            android:textSize="20dp"
            android:textColor="@color/green"
            android:layout_marginTop="10dp"
            android:id="@+id/weather_tv_temp"
            app:layout_constraintTop_toBottomOf="@+id/weather_tv_address"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:visibility="invisible"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/weather_tv_temp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/weather_rv_chart"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/weather_rv_chart"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/green"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
            android:id="@+id/weather_tv_windspeedTitle"
            tools:text="풍속"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/weather_tv_humidityTitle"/>
            <TextView
                android:id="@+id/weather_tv_humidityTitle"
                android:gravity="center"
                tools:text="습도"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/weather_tv_windspeedTitle"
                app:layout_constraintRight_toLeftOf="@id/weather_tv_blurTitle"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/weather_tv_blurTitle"
                tools:text="흐림"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/weather_tv_humidityTitle"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/weather_tv_windspeed"
                tools:text="10m/s"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/weather_tv_windspeedTitle"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/weather_tv_humidity"/>
            <TextView
                android:id="@+id/weather_tv_humidity"
                android:gravity="center"
                tools:text="90%"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/weather_tv_humidityTitle"
                app:layout_constraintLeft_toRightOf="@id/weather_tv_windspeed"
                app:layout_constraintRight_toLeftOf="@id/weather_tv_blur"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/weather_tv_blur"
                tools:text="2%"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/weather_tv_blurTitle"
                app:layout_constraintLeft_toRightOf="@id/weather_tv_humidity"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/weather_tv_precipitationTitle"
                android:gravity="center"
                tools:text="강수량( 1H )"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/weather_tv_windspeed"
                app:layout_constraintRight_toLeftOf="@id/weather_tv_snowloadTitle"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:gravity="center"
                android:id="@+id/weather_tv_snowloadTitle"
                tools:text="적설량( 1H )"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/weather_tv_blur"
                app:layout_constraintLeft_toRightOf="@id/weather_tv_precipitationTitle"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/weather_tv_precipitation"
                android:gravity="center"
                tools:text="0mm"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/weather_tv_precipitationTitle"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/weather_tv_snowload"
                android:textColor="@color/white"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/weather_tv_snowload"
                android:gravity="center"
                tools:text="0mm"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@id/weather_tv_snowloadTitle"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/weather_tv_precipitation"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/weather_tv_sunriseTitle"
                android:gravity="center"
                tools:text="일출시간"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/weather_tv_precipitation"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/weather_tv_sunsetTitle"
                android:textColor="@color/white"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/weather_tv_sunsetTitle"
                android:gravity="center"
                tools:text="일몰시간"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@id/weather_tv_snowload"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/weather_tv_sunriseTitle"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/weather_tv_sunrise"
                android:gravity="center"
                tools:text="06:00"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/weather_tv_sunsetTitle"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/weather_tv_sunset"
                android:textColor="@color/white"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/weather_tv_sunset"
                android:gravity="center"
                tools:text="18:00"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@id/weather_tv_sunsetTitle"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/weather_tv_sunrise"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
</layout>